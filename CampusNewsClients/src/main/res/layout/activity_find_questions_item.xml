<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_root_view"
    android:layout_marginStart="7dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="7dp"
        android:id="@+id/question_holder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/question_title"
            android:textColor="#303131"
            android:layout_marginStart="5dp"
            android:text="是否应该杀程序员去祭天"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/question_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果你没法简洁的表达你的观点，那只能说明你还不了解他"
            android:textSize="16sp"
            android:textColor="#303131" />
        <TextView
            android:id="@+id/question_expectation"
            android:layout_below="@id/question_content"
            android:text="期望值：555"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/question_join"
            android:background="@drawable/shape_btn_rectangle_white_blackside"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/question_content"
            android:text="我想论"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>