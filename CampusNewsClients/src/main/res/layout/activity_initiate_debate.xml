<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_find_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:background="#f4f4f4"
        app:navigationIcon="@mipmap/gray_back_mipmap"
        android:id="@+id/tool_bar"
        app:title=""
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:theme="@style/AppTheme"
        >
        <TextView
            android:textSize="20sp"
            android:text="发起辩题"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/complete"
            android:src="@mipmap/gray_tick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:id="@+id/question_father_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/title_orange"
                        android:text="发\n起\n人"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                       />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/light_blue"
                        >

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/default_round_head"
                            android:layout_margin="10dp"
                            android:id="@+id/imageView" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="初音酱"
                            android:textSize="21sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/title_orange"
                        android:text="标\n签"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="生活"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="教育"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="哲学"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="国际"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="社会"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="军事"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="体育"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <com.baibian.view.LunBa.Checkbox.CheckBox_diy
                                android:id="@+id/cb_8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:colorChecked="@color/light_blue"
                                app:colorUnchecked="#AAAAAA"
                                app:middlePadding="20dp"
                                app:shape="circle"
                                app:text="校园"
                                app:textColor="#AAAAAA"
                                app:textSize="17sp">
                            </com.baibian.view.LunBa.Checkbox.CheckBox_diy>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                >

                                <EditText
                                    android:id="@+id/_et_add_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="10dp"
                                    android:background="@drawable/textview_border"
                                    android:hint="添加标签"
                                    android:maxLength="4"
                                    android:textColorHint="#AAAAAA"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/title_orange"
                        android:text="辩\n题"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/debate_title_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余字数：40"
                            android:layout_gravity="right"
                            />
                        <EditText
                            android:id="@+id/debate_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:background="@null"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/title_orange"
                        android:text="简\n介"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/debate_brief_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余字数：100"
                            android:layout_gravity="right"
                            />
                        <EditText
                            android:id="@+id/debate_brief"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingBottom="50dp"
                            />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/title_orange"
                        android:text="背\n景"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <EditText
                            android:id="@+id/debate_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingBottom="40dp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
