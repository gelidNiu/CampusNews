<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <View
        android:background="#a197a1"
        android:id="@+id/divider_top"
        android:layout_width="132dp"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/subtract_btn"
        android:background="#ffffff"
        android:layout_width="40dp"
        android:text="-"
        android:layout_below="@id/divider_top"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="40dp" />
    <View
        android:id="@+id/divider_first"
        android:layout_toEndOf="@id/subtract_btn"
        android:background="#a197a1"
        android:layout_width="1dp"
        android:layout_height="41dp"/>
    <EditText
        android:id="@+id/figure_view"
        android:layout_toEndOf="@id/divider_first"
        android:text="1"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@null"
        android:inputType="number" />
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"/>
    <View
        android:id="@+id/divider_horizontal_end"
        android:layout_toEndOf="@+id/add_btn"
        android:background="#a197a1"
        android:layout_width="1dp"
        android:layout_height="40dp"/>
    <View
        android:id="@+id/divider_horizontal_third"
        android:layout_toStartOf="@id/add_btn"
        android:background="#a197a1"
        android:layout_width="1dp"
        android:layout_height="40dp"/>
    <View
        android:layout_below="@id/subtract_btn"
        android:id="@+id/divider_bottom"
        android:background="#a197a1"
        android:layout_width="132dp"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/add_btn"
        android:layout_toEndOf="@id/figure_view"
        android:layout_below="@id/divider_top"
        android:layout_above="@id/divider_bottom"
        android:background="#ffffff"
        android:gravity="center"
        android:text="+"
        android:textSize="20sp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>