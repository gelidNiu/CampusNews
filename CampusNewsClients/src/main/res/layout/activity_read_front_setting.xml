<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/read_setting_ll_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_alignParentBottom="true"
    android:background="@color/nb.read.menu.bg"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/nb.read_setting.divider">

        <TextView
            android:id="@+id/read_setting_tv_font_minus"
            android:layout_width="100dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Aa-"
            android:textSize="14dp"
            android:background="@drawable/shape_btn_rectangle_black_whiteside"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"/>

        <TextView
            android:id="@+id/read_setting_tv_font"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="16"
            android:textSize="14dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/read_setting_tv_font_plus"
            android:layout_width="100dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Aa+"
            android:textSize="18dp"
            android:background="@drawable/shape_btn_rectangle_black_whiteside"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/read_setting_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="@dimen/nb.read_setting.divider">

        <RadioButton
            android:id="@+id/background_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:button="@null"
            android:background="@color/c1"
            style="@style/NB.Theme.TextAppearance.Read.BottomMenu"/>

        <RadioButton
            android:id="@+id/background_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:button="@null"
            android:background="@color/c2" />

        <RadioButton
            android:id="@+id/background_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:button="@null"
            android:background="@color/c3" />

        <RadioButton
            android:id="@+id/background_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:button="@null"
            android:background="@color/c4" />

        <RadioButton
            android:id="@+id/background_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:layout_marginRight="18dp"
            android:button="@null"
            android:background="@color/c5" />

        <RadioButton
            android:id="@+id/background_default"
            android:layout_width="0dp"
            android:layout_height="@dimen/nb.read_setting.btn_height"
            android:layout_weight="1"
            android:button="@null"
            android:background="@color/c6" />

    </RadioGroup>

</LinearLayout>
