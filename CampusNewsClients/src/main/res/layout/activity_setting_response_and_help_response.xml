<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_r_h_r"
    tools:context="com.baibian.activity.user_drawer.user_setting.SettingResponseAndHelpResponseActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/setting_r_h_r_app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <android.support.v7.widget.Toolbar
            app:title="反馈"
            app:navigationIcon="@mipmap/gray_back_mipmap"
            android:id="@+id/setting_r_h_r_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:id="@+id/setting_r_h_r_content"
        android:layout_below="@id/setting_r_h_r_app_bar"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/setting_r_h_r_content_top_text"
            android:textStyle="bold"
            android:textColor="?attr/colorValue"
            android:text="尊敬的用户您好，请在下面输入框内提交您宝贵的意见，我们将会及时采纳，谢谢"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/setting_r_h_r_content_bottom_btn"
            android:text="提      交"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/setting_r_h_r_content_edit_text"
            android:padding="10dp"
            android:background="#bbbbbb"
            android:gravity="start"
            android:layout_marginTop="10dp"
            android:layout_below="@id/setting_r_h_r_content_top_text"
            android:layout_above="@id/setting_r_h_r_content_bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
