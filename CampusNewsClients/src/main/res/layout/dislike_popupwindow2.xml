<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/white_fill_rect">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dislike_reason"
            android:textColor="#6d6e6e"
            />
        <TextView
            android:id="@+id/finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/delete_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/repeat_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复"
            android:background="@drawable/gray_light_rect"
            android:textColor="#6d6e6e"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/bad_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低质量"
            android:background="@drawable/gray_light_rect"
            android:textColor="#6d6e6e"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/unfriendly_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不友善"
            android:background="@drawable/gray_light_rect"
            android:textColor="#6d6e6e"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/other_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:background="@drawable/gray_light_rect"
            android:textColor="#6d6e6e"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textSize="14sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/report_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_fill_rect"
            android:textColor="#6d6e6e"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textSize="14sp"
            android:layout_marginStart="155dp"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/report_tag"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>