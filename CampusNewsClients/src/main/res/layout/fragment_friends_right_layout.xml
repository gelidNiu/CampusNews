<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/friends_right_user_wrapper_layout"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friends_right_user_portrait"
            android:src="@drawable/default_round_head"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/friends_right_user_name"
        android:text="哈哈哈"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/friends_right_user_wrapper_layout"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>