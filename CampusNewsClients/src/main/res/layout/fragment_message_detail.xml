<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <include
        android:id="@+id/message_item_head"
        layout="@layout/message_head_view_layout" />
    <TextView
        android:text="2017-07-15"
        android:id="@+id/message_item_date"

        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@id/message_item_head"
        android:layout_toEndOf="@id/message_item_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:id="@+id/message_item_responded_text"
        android:textColor="?attr/colorValue"
        android:background="@color/colorPrimary"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_below="@id/message_item_head"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:text="如果说你们不知道老子是谁，那你们可就要完蛋了！老子可是可是可是可是可是他他娘的马斯特！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message_item_respond"
        android:textColor="?attr/colorValue"
        android:layout_alignStart="@id/message_item_responded_text"
        android:layout_below="@id/message_item_responded_text"
        android:layout_margin="10dp"
        android:text="回复："
        android:textSize="21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:id="@+id/message_item_responded_responded_text"
        android:textColor="?attr/colorValue"
        android:background="@color/colorPrimary"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_below="@id/message_item_respond"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:text="如果说你们不知道老子是谁，那你们可就要完蛋了！老子可是可是可是可是可是他他娘的马斯特！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message_item_click_to_see"
        android:layout_alignEnd="@id/message_item_responded_text"
        android:layout_below="@id/message_item_responded_responded_text"
        android:layout_marginTop="25dp"
        android:text="点击查看"
        android:textSize="18sp"
        android:textColor="#47bafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/messy_fiction_state_button"
        android:visibility="gone"
        android:layout_alignBottom="@id/message_item_click_to_see"
        android:layout_alignStart="@id/message_item_responded_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
