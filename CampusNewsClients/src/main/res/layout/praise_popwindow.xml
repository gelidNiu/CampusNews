<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/white_fill_rect"
    android:padding="10dp">
    <ImageView
        android:id="@+id/pop_approve_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/not_praised"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/approve"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="#a197a1"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/pop_oppose_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/not_opposed"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oppose"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"/>
</LinearLayout>
