<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/slogan_share"
        android:src="@color/default_desc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="15dp"
        android:src="@drawable/ic_action_more"/>
    <ImageView
        android:id="@+id/periodical_image_cover"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/ads0"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/periodical_title"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/periodical_image_cover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#303131"
        android:text="标题标题标题标题"/>
    <TextView
        android:id="@+id/share_with_friends"
        android:layout_below="@id/periodical_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="分享给小伙伴"
        android:textColor="#303131"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/divider_line"
        android:background="#a197a1"
        android:layout_below="@id/share_with_friends"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="#a197a1"
        android:orientation="horizontal"
        android:id="@+id/share_ways_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_line">
        <ImageView
            android:id="@+id/share_qq"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/login4qq"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/login4qq"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/login4qq"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/login4qq"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/login4qq"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>