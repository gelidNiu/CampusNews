<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/debate_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="论题"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:maxLines="1"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/debate_topic_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        android:textSize="@dimen/topic_item_content_text_size"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@+id/debate_topic_title"
        android:layout_below="@id/debate_topic_title"
        android:maxLines="2"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/topic_focused_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="235"
        android:textSize="@dimen/topic_item_content_text_size"
        android:drawableStart="@drawable/ic_action_more"
        android:layout_marginBottom="10dp"
        android:layout_alignStart="@id/debate_topic_title"
        android:layout_below="@id/debate_topic_content" />
    <TextView
        android:id="@+id/topic_focus_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注辩题"
        android:textSize="@dimen/topic_item_content_text_size"
        android:drawableStart="@drawable/ic_action_more"
        android:layout_alignBottom="@id/topic_focused_amount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/topic_favored_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="324"
        android:textSize="@dimen/topic_item_content_text_size"
        android:drawableStart="@drawable/ic_action_more"
        android:layout_below="@+id/debate_topic_content"
        android:layout_toStartOf="@+id/topic_focus_action"
        android:layout_marginEnd="30dp" />
    <ImageView
        android:id="@+id/debate_close_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drawer_setting"
        android:layout_alignBottom="@id/debate_topic_title"
        android:layout_alignEnd="@id/topic_focus_action"/>

</RelativeLayout>