<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login4_all_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login4background"
    android:layout_height="match_parent">
    <!--上半控件部分，动画效果-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="20dp"
                    android:paddingLeft="8dp"
                    android:text="百家争鸣 纵横捭阖"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:id="@+id/login4img11"
                    android:background="@drawable/blue_bubble"
                    android:layout_width="110dp"
                    android:layout_height="60dp" />
                <ImageView
                android:id="@+id/login4img21"
                android:src="@drawable/login4img21"
                android:layout_width="130dp"
                android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/login4img12"
                        android:layout_gravity="center"
                        android:src="@drawable/login4img12"
                        android:layout_width="80dp"
                        android:layout_height="35dp" />
                    <ImageView
                        android:id="@+id/login4img13"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/login4img13"
                        android:layout_width="150dp"
                        android:layout_height="50dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/login4img22"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/login4img22"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/login4img31"
                android:src="@drawable/login4img31"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/login4img32"
                android:layout_marginLeft="40dp"
                android:src="@drawable/login4img32"
                android:layout_width="100dp"
                android:layout_height="50dp" />

        </LinearLayout>


    </LinearLayout>
    <!--下半控件部分-->
    <LinearLayout
        android:background="@drawable/login4layout2back"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--头像控件部分-->
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login4headback"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <!--账号控件部分-->
        <EditText
            android:id="@+id/login4AccountEdit"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/accountbackgroundchange"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:hint="    用户名/手机号/邮箱"
            android:textColorHint="#F0F8FF"
            android:textColor="#F0F8FF"
            android:singleLine="true"
            android:focusable="true"
            android:textSize="25sp"
            android:digits="@string/register_name_digits"
            android:layout_width="300dp"
            android:layout_height="43dp" />
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="33dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--输入密码控件部分-->
            <EditText
                android:id="@+id/login4passwordEdit"
                android:textColor="#F0F8FF"
                android:textColorHint="#F0F8FF"
                android:hint="     密码 "
                android:paddingLeft="15dp"
                android:padding="3dp"
                android:focusable="true"
                android:password="true"
                android:singleLine="true"
                android:textSize="25sp"
                android:background="@drawable/passwordbackchange"
                android:layout_width="220dp"
                android:layout_height="43dp" />
            <!--登录控件部分-->
            <Button
                android:id="@+id/login4loginButton"
                android:text="登录"
                android:textColor="#00a0e9"
                android:textSize="23sp"
                android:layout_toRightOf="@id/login4passwordEdit"
                android:background="@drawable/login_btn_back"
                android:layout_width="80dp"
                android:layout_height="43dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--注册控件部分-->
            <Button
                android:id="@+id/login4registerbutton"
                android:textSize="20sp"
                android:text="注册/登录"
                android:textColor="#F0F8FF"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--忘记密码控件部分-->
            <Button
                android:id="@+id/login4forgetbutton"
                android:textSize="20sp"
                android:text="忘记密码"
                android:textColor="#F0F8FF"
                android:background="@android:color/transparent"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
